    <%= f.label :profit %>
    <%= f.number_field :profit %>
  </div>

  <div class="field">
    <%= f.label :user_id %>
   <%= f.collection_select :user_id,User.where({active:true,role_id:1}),:id,:name %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
