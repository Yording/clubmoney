<h1>Loans</h1>

<table>
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Responsable</th>
      <th>Amount loan</th>
      <th>Balance</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loans.each do |loan| %>
      <tr>
        <td><%= loan.user.name %></td>
        <td><%= loan.user.name %></td>
        <td><%= loan.amount_loan %></td>
        <td><%= loan.balance %></td>
        <td><%= loan.state.state %></td>
        <td><%= link_to 'Show', loan %></td>
        <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
        <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

