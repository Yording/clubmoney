<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Role</th>
      <th>Identity</th>
      <th>Name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>User name</th>
      <th>Password digest</th>
      <th>Birth date</th>
      <th>Email</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.role.role %></td>
        <td><%= user.identity %></td>
        <td><%= user.name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.phone %></td>
        <td><%= user.user_name %></td>
        <td><%= user.password_digest %></td>
        <td><%= user.birth_date %></td>
        <td><%= user.email %></td>
        <td><%= user.active %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

