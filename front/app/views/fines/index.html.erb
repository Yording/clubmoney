<p id="notice"><%= notice %></p>

<h3>Multas</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fines.each do |fine| %>
      <tr>
        <td><%= fine.name %></td>
        <td><%= fine.description %></td>
        <td><%= fine.price %></td>
        <td>
          <%= link_to(fine,class:"btn-floating btn waves-effect waves-light blue") do %>
            <i class="material-icons">visibility</i>
          <%end%>
        </td>
        <td>
          <%= link_to(edit_fine_path(fine.id),class:"btn-floating btn waves-effect waves-light blue") do %>
            <i class="material-icons">mode_edit</i>
          <%end%>
        </td>
        <td>
          <%= link_to(fine,method: :delete, data: { confirm: 'Are you sure?' },class:"btn-floating btn waves-effect waves-light blue") do %>
            <i class="material-icons">delete</i>
          <%end%>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fine', new_fine_path,class:"btn" %>
