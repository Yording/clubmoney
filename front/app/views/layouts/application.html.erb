<!DOCTYPE html>
<html>
  <head>
    <title>Front</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
     <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>

  <body>
  
  	 <nav>
    <div class="nav-wrapper">
      <%= link_to 'ClubMoney',login_path,class:'brand-logo' %>
      <% if @current_user %>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
      
         <li>
          <%= link_to 'Roles',roles_path %>
        </li>
         <li>
          <%= link_to 'Estados',states_path %>
        </li>
        <li>
          <%= link_to 'Multas',fines_path %>
        </li>
        <a class='dropdown-button btn'  data-activates='dropdown1'> <%= @current_user.name %></a>

        <!-- Dropdown Structure -->
        <ul id='dropdown1' class='dropdown-content'>
          <li><%= link_to 'Update',edit_user_path(@current_user) %></li>
          <li class="divider"></li>
          <li><%= link_to 'Logout',logout_path %></li>
        </ul>
      </ul>
      <% else %>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li>
          <%= link_to 'Log In',login_path %>
        </li>
        <li>
          <%= link_to 'Sign Up',new_user_path %>
        </li>
      </ul>
      <%end%>
    </div>
  </nav>
    <%= yield %>
      <div class="fixed-action-btn horizontal click-to-toggle" style="bottom: 45px; right: 24px;">
    <a class="btn-floating btn-large red">
      <i class="material-icons">menu</i>
    </a>
    <ul>
      <li><a class="btn-floating blue darken-4"><i class="fa fa-facebook"></i>></a></li>
      <li><a class="btn-floating red darken-2"><i class="fa fa-google"></i></a></li>
      <li><a class="btn-floating blue lighten-2"><i class="fa fa-twitter"></i></a></li>
      <li><a class="btn-floating grey darken-4"><i class="fa fa-share-alt"></i></a></li>
    </ul>
  </div>
  </body>
</html>
