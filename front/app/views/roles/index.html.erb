<p id="notice"><%= notice %></p>

<h3>Roles</h3>

<table>
  <thead>
    <tr>
      <th>Role</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.role %></td>
        <td><%= role.description %></td>
        <td>
          <%= link_to(role,class:"btn-floating btn waves-effect waves-light blue") do %>
            <i class="material-icons">visibility</i>
          <%end%>
        </td>
        <td>
          <%= link_to(edit_role_path(role.id),class:"btn-floating btn waves-effect waves-light blue") do %>
            <i class="material-icons">mode_edit</i>
          <%end%>
        </td>
        <td>
          <%= link_to(role,method: :delete, data: { confirm: 'Are you sure?' },class:"btn-floating btn waves-effect waves-light blue") do %>
            <i class="material-icons">delete</i>
          <%end%>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Role', new_role_path,class:"btn" %>
