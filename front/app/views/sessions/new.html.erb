<div class="row" style="margin-bottom: 0; max-width: 600px;">
	<div class="col s12">
		<div >
		
			<%= form_for @session, url: login_path do |f|%>									
				
				<%= f.label :user_name %>
				<%= f.text_field :user_name %>

				<%= f.label :password %>
				<%= f.password_field :password %>

				<%= f.submit 'Login',class:'btn btn-large green' %>

			<% end %>
			
		</div>		
	</div>
</div>