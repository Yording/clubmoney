<p id="notice"><%= notice %></p>

<h3>States</h3>

<table>
  <thead>
    <tr>
      <th>State</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.state %></td>
        <td><%= state.description %></td>
        <td>
          <%= link_to(state,class:"btn-floating btn waves-effect waves-light blue") do %>
            <i class="material-icons">visibility</i>
          <%end%>
        </td>
        <td>
          <%= link_to(edit_state_path(state.id),class:"btn-floating btn waves-effect waves-light blue") do %>
            <i class="material-icons">mode_edit</i>
          <%end%>
        </td>
        <td>
          <%= link_to(state,method: :delete, data: { confirm: 'Are you sure?' },class:"btn-floating btn waves-effect waves-light blue") do %>
            <i class="material-icons">delete</i>
          <%end%>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New State', new_state_path,class:"btn"%>
