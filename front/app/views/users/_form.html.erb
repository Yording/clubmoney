<div class="container">
  <div class="row">
      <%= form_for(user,class:"col s12") do |f| %>
       <% if user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
          <% user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
        <div class="row">
          <div class="input-field col s4">
             <%= f.number_field :identity %>
             <%= f.label :identity %>
          </div>
         
          <div class="input-field col s4">
             <%= f.text_field :name %>
             <%= f.label :name %>
          </div>
           <div class="input-field col s4">
            <%= f.text_field :last_name %>
             <%= f.label :last_name %>
          </div>
        </div>
        <div class="row">
           <div class="input-field col s6">
            <%= f.label :email %>
             <%= f.text_field :email %>
          </div>
          <div class="input-field col s6">
            <%= f.label :phone %>
             <%= f.text_field :phone %>
          </div>
        </div>
        <div class="row">
            <div class="field col s6">
            <%= f.label :birth_date %>
            <%= f.text_field :birth_date,type:"date",class:"datepicker" %>
          </div>
            <div class="input-field col s6">
            <%= f.label :user_name %>
             <%= f.text_field :user_name %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s6">
             <%= f.label :password %>
             <%= f.password_field :password %>
          </div>
          <div class="input-field col s6">
             <%= f.label :password_confirmation %>
             <%= f.password_field :password_confirmation %>
          </div>
        </div>
        <div class="actions">
         
          <%= f.submit class:'btn btn-large green' %>
        </div>
      <% end %>
    </div>
</div>

